<footer id="footer">
  <div class="footer-left">
    Copyright &copy; <%= new Date().getFullYear() %> <%= config.author || config.title %>
  </div>
  <div class="footer-right">
    <nav>
      <ul>
        <% for (var key in theme.nav) { %> 
          <li>
            <% if (theme.nav[key].startsWith('http')) { %>
              <a href="<%- url_for(theme.nav[key]) %>" rel="noopener"><%= key %></a>
            <% } else { %>
              <a href="<%- url_for(theme.nav[key]) %>"><%= key %></a>
            <% } %>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
</footer>
